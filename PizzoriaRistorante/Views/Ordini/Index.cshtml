@model IEnumerable<PizzoriaRistorante.Models.Ordini>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2 class="fTitle">Lista Ordini</h2>

    
    <table class="table table-dark tableStyle border border-warning border-3 text-warning">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Utenti.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>

            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Utenti.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.ActionLink("Evadi Ordine", "Edit", new { id = item.OrderId }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.OrderId }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderId }, new { @class = "btn btn-danger" })

                </td>
            </tr>
        }

    </table>
</div>
